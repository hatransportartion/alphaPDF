generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Attachment {
  id           Int       @id @default(autoincrement())
  template     PDFTemplate @relation(fields: [templateId], references: [templateId], onDelete: Cascade)
  templateId   String

  type         AttachmentType
  fileName     String
  fileType     String?        // e.g., 'image/png', 'application/pdf'

  storageType  StorageType    @default(URL)
  fileData     String?        // Base64 string, only used if storageType == BASE64
  fileUrl      String?        // Used if storageType == URL

  createdAt    DateTime   @default(now())
  updatedAt    DateTime?  @updatedAt
}

model PDFTemplate {
  id           Int      @id @default(autoincrement())
  templateName String
  templateId   String   @unique
  content      String   @db.LongText
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  attachments  Attachment[]
}

// Enums
enum AttachmentType {
  logo
  image
  pdf
  other
}

enum StorageType {
  BASE64
  URL
}


