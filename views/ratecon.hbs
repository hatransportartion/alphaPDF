<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Rate Confirmation</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      font-size: 14px;
      color: #333;
      margin: 0;
      padding: 0;
    }
    .container {
      max-width: 900px;
      margin: auto;
      padding: 20px;
    }
    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      border-bottom: 2px solid #000;
      padding-bottom: 10px;
    }
    .header .logo {
      height: 150px;
    }
    .company-info {
      text-align: right;
    }
    .company-info .name {
      font-weight: bold;
      font-size: 18px;
      text-transform: uppercase;
    }
    .section {
      padding: 15px 0;
      border-bottom: 1px solid #ccc;
    }
    .section-title {
      font-weight: bold;
      margin-bottom: 5px;
    }
    .row {
      display: flex;
      justify-content: space-between;
      flex-wrap: wrap;
      gap: 20px;
    }
    .col {
      flex: 1;
      min-width: 250px;
    }
    .field {
      margin-bottom: 6px;
    }
    .rate-box {
      background: #f2f2f2;
      padding: 10px;
      border: 1px solid #ccc;
    }
    .footer {
      display: flex;
      justify-content: space-between;
      margin-top: 40px;
    }
    .signature-line {
      border-bottom: 1px solid #000;
      width: 250px;
      height: 40px;
    }
    .watermark {
      position: fixed;
      top: 30%;
      left: 40%;
      transform: translate(-50%, -50%) rotate(-30deg);;
      opacity: 0.3;
      z-index: 0;
      width: 400px;
      height: auto;
      pointer-events: none;
    }

  </style>
</head>
<body>
  <img src="data:image/png;base64,{{data.logoBase64}}" class="watermark" alt="Watermark" />

  <div class="container">
    <!-- Header -->
    <div class="header">
      <div><img src="data:image/png;base64,{{data.logoBase64}}" class="logo" /></div>
      <div class="company-info">
        <div class="name">HA TRANSPORTATION NW LLC</div>
        <div>23406 Pacific Ave S, Ste 106</div>
        <div>Kent, WA 98032</div>
        <div>+1 (253) 237-2479</div>
      </div>
    </div>

    <!-- Shipment & Carrier Info -->
    <div class="section row">
      <div class="col">
        <div class="section-title">Shipment Info</div>
        <div class="field"><b>Shipment: </b> {{data.dispatch}}</div>
        <div class="field"><b>Load Type: </b> {{data.loadType}}</div>
        <div class="field"><b>Shipper Type: </b> {{data.shiptype}}</div>
        <div class="field"><b>Receiver Type: </b> {{data.receivertype}}</div>
      </div>
      <div class="col">
        <div class="section-title">Carrier Info</div>
        <div class="field"><b>Carrier: </b> {{data.carrier}}</div>
        <div class="field"><b>MC: </b> {{data.carriermc}}</div>
        <div class="field">{{data.carrieraddress}}</div>
        <div class="field"><b>Truck: </b> {{data.truck}}</div>
        <div class="field">Trailer: {{data.carrieraddress}}</div>
        <div class="field"><b>Driver A: </b> {{data.drivera}} | <b>Cell:</b> {{data.cella}}</div>
        <div class="field"><b>Driver B: </b> {{data.driverb}} | <b>Cell:</b> {{data.cellb}}</div>
      </div>
    </div>

    <!-- Appointment & Locations -->
    <div class="section row">
      <div class="col">
        <div class="section-title">Locations</div>
        <div><b>Pick Up Address: </b><br>{{data.pickaddress}}<br>{{data.pickcity}}, {{data.pickState}}</div>
        <div style="margin-top: 10px;"><b>Delivery Address: </b><br>{{data.receiveraddress}}<br>{{data.receivercity}}, {{data.receiverState}}</div>
      </div>
      <div class="col">
        <div class="section-title">Appointment Times</div>
        <div class="field"><b>Pick Up Date:</b> {{data.pudate}}</div>
        <div class="field"><b>Delivery Date:</b> {{data.deliveryDate}}</div>
      </div>
    </div>

    <!-- Contact & Rate -->
    <div class="section row">
      <div class="col">
        <div class="field"><b>Email: </b> dispatch@handatransportation.com</div>
        <div class="field"><b>Booked By: </b> {{data.contact}}</div>
      </div>
      <div class="col rate-box">
        <div><b>Rate Details</b></div>
        <div class="field">Line Haul: {{data.gross}}</div>
        <div class="field"><b>Total: {{data.gross}}</b></div>
        <div style="margin-top: 10px;">
          All invoices must include signed proof of delivery and supporting documents.<br />
          Please email to: Accounting@handatransportation.com<br />
          or mail to: 23406 Pacific Ave S, Ste 106, Kent, WA 98032
        </div>
      </div>
    </div>

    <!-- Signature -->
    <div class="footer">
      <div>
        <div><b>Signature</b></div>
        <div class="signature-line"></div>
      </div>
      <div>
        <div><b>Date</b></div>
        <div class="signature-line"></div>
      </div>
    </div>
  </div>
</body>
</html>
