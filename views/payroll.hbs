<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <title>Payroll</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      font-size: 14px;
      color: #333;
      margin: 0;
      padding: 0;
    }

    .container {
      max-width: 900px;
      margin: auto;
      padding: 20px;
    }

    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      border-bottom: 2px solid #000;
      padding-bottom: 10px;
    }

    .header .logo {
      height: 150px;
    }

    .company-info {
      text-align: right;
    }

    .company-info .name {
      font-weight: bold;
      font-size: 18px;
      text-transform: uppercase;
    }

    .section {
      padding: 15px 0;
      border-bottom: 1px solid #ccc;
    }

    .section-title {
      font-weight: bold;
      margin-bottom: 5px;
    }

    .row {
      display: flex;
      justify-content: space-between;
      flex-wrap: wrap;
      gap: 20px;
    }

    .col {
      flex: 1;
      min-width: 250px;
    }

    .field {
      margin-bottom: 6px;
    }

    .rate-box {
      background: #f2f2f2;
      padding: 10px;
      border: 1px solid #ccc;
    }

    .footer {
      display: flex;
      justify-content: space-between;
      margin-top: 40px;
    }

    .signature-line {
      border-bottom: 1px solid #000;
      width: 250px;
      height: 40px;
    }

    .watermark {
      position: fixed;
      top: 30%;
      left: 40%;
      transform: translate(-50%, -50%) rotate(-30deg);
      ;
      opacity: 0.3;
      z-index: 0;
      width: 400px;
      height: auto;
      pointer-events: none;
    }
  </style>
  <style>
    table {
      width: 100%;
      border-collapse: collapse;
      font-size: 11px;
      table-layout: fixed;
    }
  
    th, td {
      border: 1px solid #ccc;
      padding: 4px;
      text-align: left;
      word-wrap: break-word;
    }
  
    th {
      background-color: #f5f5f5;
    }
  </style>

</head>

<body>
  <img src="data:image/png;base64,{{data.attachments.0.fileData}}" class="watermark" alt="Watermark" />

  <div class="container">
    <!-- Header -->
    <div class="header">
      <div><img src="data:image/png;base64,{{data.attachments.0.fileData}}" class="logo" /></div>
      <div class="company-info">
        <div class="name">HA TRANSPORTATION NW LLC</div>
        <div>23406 Pacific Ave S, Ste 106</div>
        <div>Kent, WA 98032</div>
        <div>+1 (253) 237-2479</div>
      </div>
    </div>

    <table>
        <thead>
          <tr>
            <th>Dispatch #</th>
            <th>Load #</th>
            <th>Truck</th>
            <th>Status</th>
            <th>PU Date</th>
            <th>Delivery</th>
            <th>From (City, State)</th>
            <th>To (City, State)</th>
            <th>Gross</th>
            <th>Dispatch</th>
          </tr>
        </thead>
        <tbody>
            {{#each data.entries}}
            <tr>
              <td>{{dispatchNumber}}</td>
              <td>{{loadNumber}}</td>
              <td>{{truck}}</td>
              <td>{{status}}</td>
              <td>{{puDate}}</td>
              <td>{{deliveryDate}}</td>
              <td>{{shipperCity}}, {{shipperState}}</td>
              <td>{{receiverCity}}, {{receiverState}}</td>
              <td>{{gross}}</td>
              <td>{{dispatchAmount}}</td>
            </tr>
            {{/each}}
          </tbody>
      </table>

    <!-- Contact & Rate -->
    <div class="section row">
      <div class="col">
        <div class="field"><b>Email: </b> accounting@handatransportation.com</div>
      </div>
      <div class="col rate-box">
        <div><b>Net Pay</b></div>
        <div class="field">{{data.gross}}</div>
        <div style="margin-top: 10px;">
          All invoices must include signed proof of delivery and supporting documents.<br />
          Please email to: Accounting@handatransportation.com<br />
          or mail to: 23406 Pacific Ave S, Ste 106, Kent, WA 98032
        </div>
      </div>
    </div>

    <!-- Signature -->
    <div class="footer">
      <div>
        <div><b>Signature</b></div>
        <div class="signature-line"></div>
      </div>
      <div>
        <div><b>Date</b></div>
        <div class="signature-line"></div>
      </div>
    </div>
  </div>
</body>

</html>